<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2 mt-3">
                <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <h3>Create a New Listing</h3>

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
                        <div class="valid-feedback">Done</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Enter description" type="text"
                            class="form-control" required></textarea>
                            <div class="invalid-feedback">Please enter description</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input name="listing[image]" placeholder="Enter image URL/Link" type="file"
                            class="form-control" required>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="1200" class="form-control" required>
                            <div class="invalid-feedback">Please enter valid price</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                            <div class="invalid-feedback">Country name should be valid</div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Junagadh, Gujarat" type="text" class="form-control" required>
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>

                    <button class="btn btn-dark color-btn mb-5">Add</button>
                </form>
            </div>
        </div>
    </body>